{
	"printWidth": 95,
	"semi": true,
	"useTabs": true,
	"tabWidth": 4,
	"singleAttributePerLine": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^react",
		"<THIRD_PARTY_MODULES>",

		"^@/app/router(/.*)?$",
		"^@/app/providers(/.*)?$",
		"^@/app/layouts(/.*)?$",
		"^@/app(/.*)?$",

		"^@/features(/.*)?$",

		"(^@/(.*?/)?(models|types)(/.*)?$)|(.*types.*)",
		"(^@/(.*?/)?schemas(/.*)?$)|(.*schema.*)",

		"^@/(.*?/)?constants(/.*)?$",
		"^@/(.*?/)?hooks(/.*)?$",
		"^@/(.*?/)?utils(/.*)?$",
		"^@/(.*?/)?services(/.*)?$",
		"^@/(.*?/)?store(/.*)?$",

		"^@/(.*?/)?components(/.*)?(?<!\\.(css|scss|sass|less))$",

		"^\\.\\.?/[^\\n]*$",

		"^@/assets(/.*)?$",

		"\\.(css|scss|sass|less)$"
	],

	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
